<h1 class="mb-4">Add New Health Record</h1>

<form action="/records/add" method="POST" class="mb-5">
  <div class="mb-3">
    <label class="form-label">Date:</label>
    <input type="date" name="date" class="form-control" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Blood Pressure:</label>
    <input type="text" name="bloodPressure" class="form-control">
  </div>

  <div class="mb-3">
    <label class="form-label">Sugar Level:</label>
    <input type="text" name="sugarLevel" class="form-control">
  </div>

  <div class="mb-3">
    <label class="form-label">Temperature (Â°C):</label>
    <input type="number" step="0.1" name="temperature" class="form-control">
  </div>

  <div class="mb-3">
    <label class="form-label">Heart Rate:</label>
    <input type="number" name="heartRate" class="form-control">
  </div>

  <div class="mb-3">
    <label class="form-label">Symptoms:</label>
    <textarea name="symptoms" class="form-control" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-success">Save Record</button>
</form>
